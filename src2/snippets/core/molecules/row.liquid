<div class="oo-row {{ classes -}}" {{ extra_attrs -}}>

  {{- content -}}

</div>

{% comment %}
{%- capture _arguments -%}
  {%- include 'argument',
    _value: content,
    _name: 'content',
    _required: true -%}
{%- endcapture -%}

{%- capture _errors -%}
  {%- include 'errors' with _arguments, _snippet: 'row' -%}
{%- endcapture -%}

{%- assign _arguments = nil -%}

{%- if _errors == '' -%}

  <div class="oo-row {{ classes -}}" {{ extra_attrs -}}>

    {{- content -}}

  </div>

{%- else -%}

  {{- _errors -}}

{%- endif -%}

{%- assign _errors = nil -%}
{% endcomment %}
