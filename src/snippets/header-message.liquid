<div class="message-header" data-promotion-open>
  <div class="message-header-text">
    <span
      class="message-header-text--mobile"
      flow-text
      flow-text-australia="{{- settings.persistent_offer_text_intl_short -}}"
      flow-text-belgium="{{- settings.persistent_offer_text_intl_short -}}"
      flow-text-canada="{{- settings.persistent_offer_text_intl_short -}}"
      flow-text-china="{{- settings.persistent_offer_text_intl_short -}}"
      flow-text-france="{{- settings.persistent_offer_text_intl_short -}}"
      flow-text-italy="{{- settings.persistent_offer_text_intl_short -}}"
      flow-text-japan="{{- settings.persistent_offer_text_intl_short -}}"
      flow-text-republic-of-korea="{{- settings.persistent_offer_text_intl_short -}}"
      flow-text-singapore="{{- settings.persistent_offer_text_intl_short -}}"
      flow-text-united-kingdom="{{- settings.persistent_offer_text_intl_short -}}"
    >
      {{- settings.persistent_offer_text_short -}}
    </span>
    <span
      class="message-header-text--desktop"
      flow-text
      flow-text-australia="{{- settings.persistent_offer_text_intl -}}"
      flow-text-belgium="{{- settings.persistent_offer_text_intl -}}"
      flow-text-canada="{{- settings.persistent_offer_text_intl -}}"
      flow-text-china="{{- settings.persistent_offer_text_intl -}}"
      flow-text-france="{{- settings.persistent_offer_text_intl -}}"
      flow-text-italy="{{- settings.persistent_offer_text_intl -}}"
      flow-text-japan="{{- settings.persistent_offer_text_intl -}}"
      flow-text-republic-of-korea="{{- settings.persistent_offer_text_intl -}}"
      flow-text-singapore="{{- settings.persistent_offer_text_intl -}}"
      flow-text-united-kingdom="{{- settings.persistent_offer_text_intl -}}"
    >
      {{- settings.persistent_offer_text -}}
    </span>
  </div>
  <button class="message-header-trigger" js-header-trigger>{{ settings.collapsed_trigger }}</button>
</div>