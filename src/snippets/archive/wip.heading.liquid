{%- capture arguments -%}
  {%- include 'argument',
    _name: 'text',
    _required: true,
    _value: text,
    _type: 'String',
    _description: 'content used for header' -%}
  {%- include 'argument',
    _name: 'level',
    _required: true,
    _value: level,
    _type: 'Number',
    _description: 'value used for heading level (e.g. h1-h6)' -%}
{%- endcapture -%}

{%- capture errors -%}
  {%- include 'errors' with arguments, snippet: 'heading' -%}
{%- endcapture -%}

{%- if errors == '' -%}
  <heading class="oo-heading {{ classes }}" {{ extra_attrs }}>
    <h{{- level -}}>{{- text -}}</h{{- level -}}>
  </heading>
{%- else -%}
  {{ errors }}
{%- endif -%}

{%- assign arguments = blank -%}
{%- assign errors = blank -%}
