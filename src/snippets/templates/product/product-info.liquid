{% comment %}

  Required arguments:

  Optional arguments:
  - show_compare_at_price
  - show_option_name
  - show_selected_value
  - add_to_cart_button_text
  - add_to_cart_button_classes

{% endcomment %}

{%- assign _variant = _product.selected_or_first_available_variant -%}


<div class="product-info {{ classes -}}" {{ attrs -}}>

  {%- include 'header', title: _product.title -%}

  <div class="product-prices">

    {%- include 'price',
      _price: _variant.price,
      type: 'price' -%}

    {%- if show_compare_at_price == true -%}

      {%- include 'price',
        _price: _variant.compare_at_price,
        type: 'compare_at_price' -%}

    {%- endif -%}

  </div>

  <div class="product-description">

    {%- include 'text',
      content: _product.description,
      rte: true -%}

  </div>

  {%- include 'product-add-to-cart-form',
    show_option_name: show_option_name,
    show_selected_value: show_selected_value,
    add_to_cart_button_text: add_to_cart_button_text
    add_to_cart_button_classes: add_to_cart_button_classes -%}

</div>

{%- assign _variant = nil -%}
