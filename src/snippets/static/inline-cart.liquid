{%- comment -%}

  Arguments:
  - inline_cart_heading
  - inline_cart_close_icon
  - inline_cart_button_one_enabled
  - inline_cart_button_one_text
  - inline_cart_button_one_href
  - inline_cart_button_one_classes
  - inline_cart_button_two_enabled
  - inline_cart_button_two_text
  - inline_cart_button_two_href
  - inline_cart_button_two_classes

{%- endcomment -%}


{%- capture inline_cart_header_content -%}
  {%- include 'button',
    icon: inline_cart_close_icon,
    classes: 'button--reset',
    attrs: 'data-close-inline-cart' -%}
{%- endcapture -%}

{%- include 'header',
  title: inline_cart_heading,
  level: 3,
  content: inline_cart_header_content %}

{% assign inline_cart_header_content = nil %}


<div class="oo-inline-cart--contents" data-inline-cart-contents>

  {%- include 'inline-cart-contents' -%}

</div>


<footer class="oo-inline-cart--footer">
  {%- if inline_cart_button_one_enabled == true-%}

    {%- include 'button',
      content: inline_cart_button_one_text,
      href: inline_cart_button_one_href,
      classes: inline_cart_button_one_classes -%}

  {%- endif -%}


  {%- if inline_cart_button_two_enabled == true -%}

    {%- include 'button',
      content: inline_cart_button_two_text,
      href: inline_cart_button_two_href,
      classes: inline_cart_button_two_classes -%}

  {%- endif -%}
</footer>
