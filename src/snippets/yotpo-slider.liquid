  <div class="yotpo-section product-review-section" id="yotpo">
  <section class="yotpo-custom-container">

    {% comment %} ENTRY POINTS {% endcomment %}
    <div class="all-reviews-entry-point"></div>

      <button class="write-review write-review-button js-write-review">Write A Review</button>

      {% comment %} WRITE REVIEW FORM {% endcomment %}
      <div class="write-review-form">
        <form action="/" class="write-review-form-container" method="post" accept-charset="utf-8" target="_blank" id="writeReview">
          <div class="close-review-form">
            <img src="{{ 'oros-close.svg' | asset_url }}" alt="close icon"> 
          </div>
          <p class="write-a-review-title">Write Yours</p>
          <input type="hidden" name="pid" value="{{ product.id }}">
          <input type="hidden" name="product_title" value="{{ product.title }}">
          <label>Score</label>
          <div class="star-score-wrap">
            <span class="star-score" data-score="1"><i class="fa fa-star-o" aria-hidden="true"></i></span>
            <span class="star-score" data-score="2"><i class="fa fa-star-o" aria-hidden="true"></i></span>
            <span class="star-score" data-score="3"><i class="fa fa-star-o" aria-hidden="true"></i></span>
            <span class="star-score" data-score="4"><i class="fa fa-star-o" aria-hidden="true"></i></span>
            <span class="star-score" data-score="5"><i class="fa fa-star-o" aria-hidden="true"></i></span>
          </div>
          <input type="hidden" value="{{ shop.url }}" name="shop" id="shop_url">
          <input type="hidden" value="" name="review_score" id="review_score" required>
          <label for="review_title">Title</label>
          <input type="text" name="review_title" required>
          <label for="review_content">Review</label>
          <textarea name="review_content" required></textarea>
          <label for="display_name">Your Name</label>
          <input type="text" name="display_name" required>
          <label for="email">Email</label>
          <input type="email" name="email" required>
          <input type="hidden" name="product_image_url" value="{{ product.featured_image | product_img_url }}">
          <input type="hidden" name="product_description" value="{{ product.description  |  strip_html }}">
          <div class="write-review-submit-btn-wrap">
              <button class="button button--black product-review-submit-button" type="submit">Submit Review</button>  
          </div>  
        </form>
      </div>

  </section>
</div>
<script>
  window.yotpoApp = { 
    "productId": "{{ product.id }}",
    "productTitle": "{{ product.title }}",
    "shopUrl": "{{ shop.domain }}",
    "reviewsEntryPoint": ".all-reviews-entry-point",
    "avgRatingEntryPoint": ".avg-review-stars",
    "herokuAppName": "yotpo-seed-all"  
 };
</script>