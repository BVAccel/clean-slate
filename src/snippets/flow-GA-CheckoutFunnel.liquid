<script>
/* global ga, Flow, ShopifyAnalytics */
/* eslint-disable no-var, prefer-arrow-callback, prefer-template, object-shorthand */

(function flowGa() {
  var NOT_SET = '(not set)';

  function gaReady() {
    return typeof ga !== 'undefined';
  }

  // Flow is ready of 'getExperience' function exists
  function flowReady() {
    return Flow && typeof Flow.getExperience === 'function';
  }

  // Wait until trekkie is loaded (lib will transition from an empty array to an object).
  function shopifyAnalyticsReady() {
    return ShopifyAnalytics && typeof ShopifyAnalytics.lib === 'object';
  }

  function isReady() {
    return gaReady() && flowReady() && shopifyAnalyticsReady();
  }

  /**
   * Exponential backoff. Keep trying but delay a little longer each attempt.
   */
   function backoff(test, callback, delay) {
    function getNewDelay() {
      if (!delay) {
        return 1;
      }

      return (delay >= Number.MAX_VALUE) ? delay : delay * 2;
    }

    if (test()) {
      callback();
    } else {
      setTimeout(function () {
        backoff(test, callback, getNewDelay());
      }, Math.log(getNewDelay()) * 100);
    }
  }

  function getItemFromCart(id, cart) {
    var len = cart.items.length;
    var item;
    var i = 0;

    for (i = 0; i < len; i += 1) {
      if (id.toString() === cart.items[i].variant_id.toString()) {
        item = cart.items[i];
      }
    }

    return item;
  }

  function getOrderPricing(order) {
    var pricing = {};
    var prices = order.prices;
    var pricesLength = order.prices.length;
    var i;

    for (i = 0; i < pricesLength; i += 1) {
      pricing[prices[i].key] = prices[i].base.amount;
    }

    return pricing;
  }

  function getCountry() {
    return Flow.getCountry() || NOT_SET;
  }

  function gaFlowTestData() {
    const flowSession = JSON.parse(localStorage.getItem('_f60_session'));
    const flowTestData = {
      experiment_key: flowSession.experiment ? flowSession.experiment.key : undefined,
      experiment_variant_key: flowSession.experiment && flowSession.experiment.variant ? flowSession.experiment.variant.key : undefined,
    }
    ga('set', 'dimension3', flowTestData.experiment_key);
    ga('set', 'dimension4', flowTestData.experiment_variant_key);
    // console.log('Data to be passed to 3rd party', flowTestData);
  }

  function gaDimensions() {
    var country = getCountry();
    var dim2 = country === NOT_SET ? 'Domestic' : 'International';

    ga('set', 'dimension1', country);
    ga('set', 'dimension2', dim2);
  }

    // Not generic, specific to Briogeo -- Can be set outside of this code.
    function allPages() {
      window.__bva__ = window.__bva__ || []; 
      var country = getCountry();
      var dim2 = country === NOT_SET ? 'Domestic' : 'International';

    // Call this ONCE for every page.
    // Thows errors. Should not be set here. Only once at some higher level.
    ga('require', 'ec');

    gaFlowTestData();
    gaDimensions();
    ga('send', 'event', 'All Pages', 'Flow ' + dim2, country, {
      nonInteraction: 1,
    });
  }

  function ShopifyCheckout(){ // housing this in Flow to detect if Flow is enabled or not
  // will complete up to step 4 if user is logged in without a Flow experience
  // will complete up to steo 2 if user is logged in with a Flow experience
  $(document).on("click", ".btn-checkout", function(){
    ga('ec:setAction','checkout', {
      'step': 1
    });
    ga('send', 'event', 'Checkout', 'Cart');

      // check if customer
      {% if customer %}
      ga('ec:setAction','checkout', {
        'step': 2,
        'option': "Logged In"
      });
      var dimensionValue = "Logged In";
      ga('set', 'dimension5', dimensionValue);
      ga('send','event','Checkout','Login');
      // check if flow instance is available
      {% endif %}
    });

    // if user is not logged in and Flow is not enabled
    if(Flow.getExperience() === undefined){
      if(Shopify.Checkout){
        if(Shopify.Checkout.step == "contact_information"){
          ga('require', 'ec');
          ga('ec:setAction','checkout', {
            'step': 3
          });
          ga('send','event','Checkout','Customer Info');
        }else if(Shopify.Checkout.step == "shipping_method"){
          ga('require', 'ec');
          ga('ec:setAction','checkout', {
            'step': 4
          });
          ga('send','event','Checkout','Shipping');
        }else if(Shopify.Checkout.step == "payment_method"){
          ga('require', 'ec');
          ga('ec:setAction','checkout', {
            'step': 5
          });
          ga('send','event','Checkout','Payment');
        }else if(Shopify.Checkout.step == "thank_you"){
          ga('send','event','Checkout','Thank You');
        }
      }
      $('.step__footer__continue-btn.btn').click(function(){
        if($(this).children("span").text() == "Complete order"){
          $('.section--payment-method input[name="checkout[payment_gateway]"]').each(function(){
            if($(this).is(":checked")){
              console.log('checked')
              __bva__payment = $(this).parent().siblings(".radio__label").children(".radio__label__primary").text().trim();
              var dimensionValue = __bva__payment;
              ga('set', 'dimension16', dimensionValue);
              ga('send','event','Checkout','Payment Method');
            }
          });
        }
      });
    }
  }

  function GALogin(){
    ga('ec:setAction','checkout', {
      'step': 2,
      'option': __bva__logStatus
    });
    var dimensionValue =  __bva__logStatus;
    ga('set', 'dimension5', dimensionValue);
    ga('send', 'event', 'Checkout','Login');
  }

  function setupAddToCart() {
    Flow.on('cart.addItem', function (data) {
      var item = getItemFromCart(data.id, data.cart);
      var eventData = {
        variantId: item.variant_id,
        productId: item.product_id,
        currency: window.ShopifyAnalytics.meta.currency,
        quantity: data.quantity,
        price: item.local.price.base.amount,
        name: item.title,
        sku: item.sku,
        brand: item.vendor,
        variant: item.variant_title,
        category: item.product_type,
      };

      if (window.ShopifyAnalytics.meta.page) {
        eventData.pageType = window.ShopifyAnalytics.meta.page.pageType;
        eventData.resourceType = window.ShopifyAnalytics.meta.page.resourceType;
        eventData.resourceId = window.ShopifyAnalytics.meta.page.resourceId;
      }

      // Trigger same code that Shopify uses internally.
      window.ShopifyAnalytics.lib.track('Added Product', eventData);

      // Can we get rid of this? Appears to be in use to flush data to ga servers.
      ga('send', 'event', 'Flow', 'click', 'add to cart');
    });
  }

  function dataLayerTransaction(order) {
    var lines = order.lines;
    var linesLength = lines.length;
    var i;
    var transactionData = {
      revenue: order.total.base.amount,
      currency: window.ShopifyAnalytics.meta.currency,
      products: []
    }

    for (i = 0; i < linesLength; i += 1) {
      transactionData.products.push({
        id: lines[i].shopify.product_id,
        name: lines[i].shopify.title,
        variant: lines[i].shopify.variant_id,
        price: lines[i].price.base.amount,
        quantity: lines[i].shopify.quantity,
        category: lines[i].shopify.product_type,
        sku: lines[i].shopify.sku
      });
    }

    dataLayer.push(transactionData, {
      'pageType' :'Transaction',
      'event'    :'Transaction'
    });
    console.log('Transaction Data', transactionData);
  }

  function gaAddProducts(order) {
    var lines = order.lines;
    var linesLength = lines.length;
    var i;

    for (i = 0; i < linesLength; i += 1) {
      ga('ec:addProduct', {
        id: lines[i].shopify.product_id,
        name: lines[i].shopify.title,
        variant: lines[i].shopify.variant_id,
        price: lines[i].price.base.amount,
        quantity: lines[i].shopify.quantity,
        category: lines[i].shopify.product_type,
      });
    }
  }

  // GA Funnel Step 1 - Cart / Login
  function gaStep1() {
    ShopifyCheckout();
  }

  // GA Funnel Step 2 - Login
  function gaStep2() {
    if(document.location.pathname.match(/\/account\/login.*/g)){
     $(document).on("click", '[kind="facebook"]', function(){
      __bva__logStatus = "Account Created / Logged In: Facebook";
      GALogin();
    });

     $(document).on("click", '[kind="google"]', function(){
      __bva__logStatus = "Account Created / Logged In: Google";
      GALogin();
    });

     $(document).on("click", '#customer_login [type="submit"]', function(){
      __bva__logStatus = "Account Created : Email";
      GALogin();
    });

     $(document).on("click", '#create_customer [type="submit"]', function(){
      __bva__logStatus = "Logged In: Email";
      GALogin();
    });
   }
 }

  // GA Funnel Step 3 - Checkout: Customer Information
  function gaStep3(order) {
    gaAddProducts(order);
    ga('ec:setAction', 'checkout', {
      step: 3,
    });
    gaDimensions();
    ga('send', 'event', 'Flow Checkout', 'Customer Information');
    console.log('THIS SHOULD FIRE AGAIN', order);
    dataLayer.push({
      'event': 'Flow Customer Information'
    });  
  }

  // GA Funnel Step 4 - Checkout: Shipping Information
  function gaStep4(order) {
    gaAddProducts(order);
    ga('ec:setAction', 'checkout', {
      step: 4,
    });
    gaDimensions();
    ga('send', 'event', 'Flow Checkout', 'Shipping Information');
    dataLayer.push({
      'event': 'Flow Shipping Information'
    });
  }

  // GA Funnel Step 5 - Checkout: Payment Info
  function gaStep5(order) {
    gaAddProducts(order);
    ga('ec:setAction', 'checkout', {
      step: 5,
    });
    gaDimensions();
    ga('send', 'event', 'Flow Checkout', 'Add Payment Info');
    dataLayer.push({
      'event': 'Flow Payment Information'
    });  
  }

  // GA Funnel Step 6 - Checkout: Thank You
  function gaPurchase(order) {
    var orderPricing = getOrderPricing(order);

    gaAddProducts(order);
    ga('ec:setAction', 'purchase', {
      id: order.number,
      revenue: order.total.base.amount,
      tax: orderPricing.tax || 0,
      shipping: getOrderPricing.shipping || 0,
    });
    gaDimensions();
    ga('send', 'event', 'Flow Checkout', 'Purchase');

    dataLayer.push({
      'event': 'Flow Checkout',
      'transactionId': order.number,
      'transactionTotal': order.total.base.amount,
      'transactionShipping': getOrderPricing.shipping || 0,
      'transactionTax': orderPricing.tax || 0
    });

    dataLayerTransaction(order);
  }

  function setupCheckoutStep1() {
    gaStep1();
    gaStep2();
  }

  function setupCheckoutStep2() {
    Flow.set('on', 'pageview.checkout_step_1', function (data) {
      console.log('THIS SHOULD FIRE', data.order);
      gaStep3(data.order);
    });
  }

  function setupCheckoutStep3() {
    Flow.set('on', 'pageview.checkout_step_2', function (data) {
      gaStep4(data.order);
    });
  }

  function setupCheckoutStep4() {
    Flow.set('on', 'pageview.checkout_step_3', function (data) {
      gaStep5(data.order);
    });
  }

  function setupCheckoutThankYou() {
    Flow.set('on', 'pageview.checkout_thank_you', function (data) {
      gaPurchase(data.order);
    });
  }

  function setup() {
    console.log('[flow_ga] Setup!');

    allPages();
    setupAddToCart();
    setupCheckoutStep1();
    setupCheckoutStep2();
    setupCheckoutStep3();
    setupCheckoutStep4();
    setupCheckoutThankYou();
  }

  function init() {
    // Wait for GA, Shopify and Flow to be ready.
    backoff(isReady, setup);
  }

  init();
}());
</script>