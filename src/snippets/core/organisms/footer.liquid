{%- capture _arguments -%}
  {%- include 'argument',
    _value: menu,
    _name: 'menu',
    _required: true -%}
{%- endcapture -%}

{%- capture _errors -%}
  {%- include 'errors' with _arguments, _snippet: 'footer' -%}
{%- endcapture -%}

{%- assign _arguments = nil -%}

{%- if _errors == '' -%}

  <footer class="oo-footer">

    {%- for parent in linklists[menu].links -%}

      {%- capture _list -%}
        {%- for child in parent.links -%}
          {%- capture _link_content -%}
            {%- if parent.url == '#social-links' -%}
              {%- include 'icon-with-text',
                icon: child.handle,
                text: child.title -%}
            {%- else -%}
              {{- child.title -}}
            {%- endif -%}
          {%- endcapture -%}
          -->{%- include 'link',
            href: child.url,
            content: _link_content -%}
          {%- assign _link_content = nil -%}
        {%- endfor -%}
      {%- endcapture -%}

      {%- include 'menu',
        title: parent.title,
        level: 3,
        list: _list,
        classes: 'inside-oo-footer' -%}

      {%- assign _list = nil -%}

    {%- endfor -%}

  </footer>

{%- else -%}

  {{- _errors -}}

{%- endif -%}

{%- assign _errors = nil -%}
