{%- capture _arguments -%}
  {%- include 'argument',
    _value: menu,
    _name: 'menu',
    _required: false -%}
{%- endcapture -%}

{%- capture _errors -%}
  {%- include 'errors' with _arguments, _snippet: 'secondary-navigation' -%}
{%- endcapture -%}

{%- assign _arguments = nil -%}

{%- if _errors == '' -%}

  <nav class="oo-secondary-navigation">

    {%- include 'form-search' -%}

  </nav>

{%- else -%}

  {{- _errors -}}

{%- endif -%}

{%- assign _errors = nil -%}
