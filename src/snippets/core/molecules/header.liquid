{%- capture _arguments -%}
  {%- include 'argument',
    _value: title,
    _name: 'title',
    _required: true -%}
  {%- include 'argument',
    _value: level,
    _name: 'level',
    _required: false -%}
  {%- include 'argument',
    _value: content,
    _name: 'content',
    _required: false -%}
{%- endcapture -%}

{%- capture _errors -%}
  {%- include 'errors' with _arguments, _snippet: 'heading' -%}
{%- endcapture -%}

{%- assign _arguments = nil -%}

{%- if _errors == '' -%}

  <header class="oo-header {{ classes -}}" {{ extra_attrs -}}>

    {%- include 'heading',
      level: level,
      title: title,
      classes: '',
      extra_attrs: '' -%}

    {%- unless content == blank -%}

      {{- content -}}

    {%- endunless -%}

  </header>

{%- else -%}

  {{- _errors -}}

{%- endif -%}

{%- assign _errors = nil -%}
