{%- capture _arguments -%}
  {%- include 'argument',
    _value: media,
    _name: 'media',
    _required: true -%}
  {%- include 'argument',
    _value: resource,
    _name: 'resource',
    _required: false -%}
  {%- include 'argument',
    _value: size,
    _name: 'size',
    _required: false -%}
  {%- include 'argument',
    _value: src,
    _name: 'src',
    _required: false -%}
  {%- include 'argument',
    _value: content,
    _name: 'content',
    _required: false -%}
{%- endcapture -%}

{%- capture _errors -%}
  {%- include 'errors' with _arguments, _snippet: 'hero' -%}
{%- endcapture -%}

{%- assign _arguments = nil -%}

{%- if _errors == '' -%}

  <div class="oo-hero {{ classes -}}" {{ extra_attrs -}}>

    {%- if media == 'image' -%}

      {%- include 'image',
        resource: resource,
        size: size,
        classes: 'inside-oo-hero',
        extra_attrs: '' -%}

    {%- elsif media == 'video' -%}

      {%- include 'video',
        src: src,
        classes: 'inside-oo-hero',
        extra_attrs: '' -%}

    {%- else -%}

      {{- media -}}

    {%- endif -%}

    {%- unless content == blank -%}

      {{- content -}}

    {%- endunless -%}

  </div>

{%- else -%}

  {{- _errors -}}

{%- endif -%}

{%- assign _errors = nil -%}
