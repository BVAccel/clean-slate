{%- capture _arguments -%}
  {%- include 'argument',
    _value: name,
    _name: 'name',
    _required: true -%}
  {%- include 'argument',
    _value: slides,
    _name: 'slides',
    _required: false -%}
{%- endcapture -%}

{%- capture _errors -%}
  {%- include 'errors' with _arguments, _snippet: 'slider' -%}
{%- endcapture -%}

{%- assign _arguments = nil -%}

{%- if _errors == '' -%}

  <div
    class="oo-slider {{ classes -}}"
    data-slider="{{ name }}"
    {{ extra_attrs }}>

    {%- assign _slides_array = slides | remove_first: '-->' | split: '-->' -%}

    {%- for _slide in _slides_array -%}
      {{- _slide -}}
    {%- endfor -%}

    {%- assign _slides_array = nil -%}

  </div>

{%- else -%}

  {{- _errors -}}

{%- endif -%}

{%- assign _errors = nil -%}
