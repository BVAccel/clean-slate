{%- capture arguments -%}
  {%- include 'argument',
    _name: 'src',
    _required: true,
    _value: src,
    _type: 'String',
    _description: '' -%}
  {%- include 'argument',
    _name: 'controls',
    _required: false,
    _value: controls,
    _type: '',
    _description: '' -%}
  {%- include 'argument',
    _name: 'muted',
    _required: false,
    _value: muted,
    _type: '',
    _description: '' -%}
  {%- include 'argument',
    _name: 'autoplay',
    _required: false,
    _value: autoplay,
    _type: '',
    _description: '' -%}
  {%- include 'argument',
    _name: 'loop',
    _required: false,
    _value: loop,
    _type: '',
    _description: '' -%}
  {%- include 'argument',
    _name: 'poster',
    _required: false,
    _value: poster,
    _type: '',
    _description: '' -%}
{%- endcapture -%}

{%- capture errors -%}
  {%- include 'errors' with arguments, snippet: 'video' -%}
{%- endcapture -%}

{%- if errors == '' -%}
  <video class="oo-video {{ classes }}" {{ additional_attributes }}
         src="{{- src -}}"
         {%- if controls != blank -%}controls{%- endif -%}
         {%- if muted != blank -%}muted{%- endif -%}
         {%- if autoplay != blank -%}autoplay{%- endif -%}
         {%- if loop != blank -%}loop{%- endif -%}
         {%- if poster != blank -%}poster="{{- poster -}}"{%- endif -%}>
    Sorry, your browser doesn't support embedded videos.
  </video>
{%- else -%}
  {{ errors }}
{%- endif -%}

{%- assign arguments = blank -%}
{%- assign errors = blank -%}
