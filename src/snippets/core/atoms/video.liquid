<video
  class="oo-video {{ classes -}}"
  src="{{- src -}}"
  {%- if controls != blank -%}controls{%- endif -%}
  {%- if muted != blank -%}muted{%- endif -%}
  {%- if autoplay != blank -%}autoplay{%- endif -%}
  {%- if loop != blank -%}loop{%- endif -%}
  {%- if poster != blank -%}poster="{{- poster -}}"{%- endif -%}
  {{ extra_attrs -}}>

  Sorry, your browser doesn't support embedded videos.

</video>

{% comment %}
{%- capture _arguments -%}
  {%- include 'argument',
    _value: src,
    _name: 'src',
    _required: true -%}
  {%- include 'argument',
    _value: controls,
    _name: 'controls',
    _required: false -%}
  {%- include 'argument',
    _value: muted,
    _name: 'muted',
    _required: false -%}
  {%- include 'argument',
    _value: autoplay,
    _name: 'autoplay',
    _required: false -%}
  {%- include 'argument',
    _value: loop,
    _name: 'loop',
    _required: false -%}
  {%- include 'argument',
    _value: poster,
    _name: 'poster',
    _required: false -%}
{%- endcapture -%}

{%- capture _errors -%}
  {%- include 'errors' with _arguments, _snippet: 'video' -%}
{%- endcapture -%}

{%- assign _arguments = nil -%}

{%- if _errors == '' -%}

  <video
    class="oo-video {{ classes -}}"
    src="{{- src -}}"
    {%- if controls != blank -%}controls{%- endif -%}
    {%- if muted != blank -%}muted{%- endif -%}
    {%- if autoplay != blank -%}autoplay{%- endif -%}
    {%- if loop != blank -%}loop{%- endif -%}
    {%- if poster != blank -%}poster="{{- poster -}}"{%- endif -%}
    {{ extra_attrs -}}>

    Sorry, your browser doesn't support embedded videos.

  </video>

{%- else -%}

  {{- _errors -}}

{%- endif -%}

{%- assign _errors = nil -%}
{% endcomment %}
