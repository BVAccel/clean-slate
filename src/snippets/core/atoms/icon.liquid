{%- capture _arguments -%}
  {%- include 'argument',
    _value: name,
    _name: 'name',
    _required: true -%}
{%- endcapture -%}

{%- capture _errors -%}
  {%- include 'errors' with _arguments, _snippet: 'icon' -%}
{%- endcapture -%}

{%- assign _arguments = nil -%}

{%- if _errors == '' -%}

  <div class="oo-icon icon-{{- name }} {{ classes -}}" {{ extra_attrs -}}>

    {%- assign _icon_name = name | prepend: 'icon-' -%}
    {%- include _icon_name -%}
    {%- assign _icon_name = nil -%}

  </div>

{%- else -%}

  {{- _errors -}}

{%- endif -%}

{%- assign _errors = nil -%}
