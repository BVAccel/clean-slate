{%- capture _arguments -%}
  {%- include 'argument',
    _value: snippet,
    _name: 'snippet',
    _required: true -%}
{%- endcapture -%}

{%- capture _errors -%}
  {%- include 'errors' with _arguments, _snippet: 'svg' -%}
{%- endcapture -%}

{%- assign _arguments = nil -%}

{%- if _errors == '' -%}

  <div class="oo-svg {{ classes -}}" {{ extra_attrs -}}>

    {%- include snippet -%}

  </div>

{%- else -%}

  {{- _errors -}}

{%- endif -%}

{%- assign _errors = nil -%}
