{%- capture _arguments -%}
  {%- include 'argument',
    _value: type,
    _name: 'type',
    _required: true -%}
  {%- include 'argument',
    _value: name,
    _name: 'name',
    _required: true -%}
  {%- include 'argument',
    _value: value,
    _name: 'value',
    _required: true -%}
  {%- include 'argument',
    _value: id,
    _name: 'id',
    _required: false -%}
{%- endcapture -%}

{%- capture _errors -%}
  {%- include 'errors' with _arguments, _snippet: 'input' -%}
{%- endcapture -%}

{%- assign _arguments = nil -%}

{%- if _errors == '' -%}

  <input
    class="oo-input input-type-{{- type }} {{ classes -}}"
    type="{{- type -}}"
    name="{{- name -}}"
    value="{{- value -}}"
    {%- if id -%}id="{{- id -}}"{%- endif -%}
    {{ extra_attrs -}}>

{%- else -%}

  {{- _errors -}}

{%- endif -%}

{%- assign _errors = nil -%}
