{%- comment -%}

  Required arguments:
  - content

  Optional arguments:
  - rte
  - classes
  - attrs

{%- endcomment -%}


{%- assign tag = 'p' -%}
{%- if rte == true -%}
  {%- assign tag = 'p' -%}
  {%- assign classes = classes | append: ' rte'  -%}
{%- endif -%}

<{{- tag }} class="oo-text {{ classes -}}" {{ attrs -}}>

  {{- content -}}

</{{- tag -}}>

{%- assign tag = nil -%}
{%- assign classes = nil -%}
