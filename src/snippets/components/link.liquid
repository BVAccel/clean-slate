{%- comment -%}

  Required arguments:
  - content

  Optional arguments:
  - button
  - href
  - target
  - icon
  - classes
  - attrs

{%- endcomment -%}

<a class="oo-link {% if button != blank -%}oo-button{%- endif %} {{ classes -}}"
  href="{{- href -}}"
  {%- if target != blank -%}target="{{- target -}}"{%- endif -%}
  {{ attrs -}}>

  {%- if icon != blank -%}

    {%- include 'icon',
      name: icon,
      classes: '',
      attrs: '' -%}

  {%- else -%}

    {{- content -}}

  {%- endif -%}

</a>
