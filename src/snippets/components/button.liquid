{%- comment -%}

  Required arguments:
  - content

  Optional arguments:
  - type
  - href
  - icon
  - classes
  - attrs

{%- endcomment -%}


<{%- if href != blank -%}a{%- else -%}button{%- endif %}
  class="oo-button {{ classes -}}"
  {%- if type != blank -%}type="{{- type -}}"{%- endif -%}
  {%- if href != blank -%}href="{{- href -}}"{%- endif -%}
  {{ attrs -}}>

  {%- if icon != blank -%}

    {%- include 'icon',
      name: icon,
      classes: '',
      attrs: '' -%}

  {%- else -%}

    {{- content -}}

  {%- endif -%}

</{%- if href != blank -%}a{%- else -%}button{%- endif -%}>
