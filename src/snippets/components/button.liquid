{%- comment -%}

  Required arguments:
  - content

  Optional arguments:
  - type
  - href
  - classes
  - attrs

{%- endcomment -%}


<{%- if href != blank -%}a{%- else -%}button{%- endif %}
  class="oo-button {{ classes -}}"
  {%- if type != blank -%}type="{{- type -}}"{%- endif -%}
  {%- if href != blank -%}href="{{- href -}}"{%- endif -%}
  {{ attrs -}}>

  {{- content -}}

</{%- if href != blank -%}a{%- else -%}button{%- endif -%}>
