{%- capture _arguments -%}
  {%- include 'argument',
    _value: _product,
    _name: '_product',
    _required: true -%}
{%- endcapture -%}

{%- capture _errors -%}
  {%- include 'errors' with _arguments, _snippet: 'variant' -%}
{%- endcapture -%}

{%- assign _arguments = nil -%}

{%- if _errors == '' -%}

  <script type="application/json" data-option-data>
  {
    "data": [

      {%- for _option in _product.options_with_values -%}

        {%- include 'option-object',
          _option: _option -%}{%- unless forloop.last -%},{%- endunless -%}

      {%- endfor -%}

    ]
  }
  </script>

{%- else -%}

  {{- _errors -}}

{%- endif -%}

{%- assign _errors = nil -%}

