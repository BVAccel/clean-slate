{%- comment -%}

  Required arguments:
  - _product

  Optional arguments:
  - classes
  - attrs

{%- endcomment -%}


{%- capture product_item_content -%}
  {%- capture product_image_href -%}
    href="{{ _product.url }}"
  {%- endcapture -%}

  {%- include 'image',
    resource: _product.featured_image,
    size: '400x',
    wrapper_tag: 'a',
    attrs: product_image_href -%}

  {%- capture subheading -%}
    {%- include 'text', content: _product.vendor -%}
  {%- endcapture -%}

  {%- include 'header',
    level: 2,
    title: _product.title,
    content: subheading -%}

  {%- include 'price',
    _price: _product.price,
    type: 'price' -%}

  {%- include 'button',
    content: 'Add To Cart',
    classes: 'button--primary-alt' -%}

  {%- include 'button',
    content: 'Quickview',
    icon: 'icon-add',
    classes: 'button--primary-alt' -%}
{%- endcapture -%}


{%- include 'product-container',
  name: 'product-grid-item',
  _product: _product,
  content: product_item_content,
  classes: 'oo-product-item' -%}
