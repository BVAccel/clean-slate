{% schema %}
  {
    "name": "Product Variant Color",
    "blocks": [
      {
        "type": "variantColor",
        "name": "Variant Color",
        "type": "test",
        "settings": [
          {
            "id": "colorStr",
            "type": "text",
            "label": "Color Label (what the color is called in product variants)"
          },
          {
            "id": "colorHex",
            "type": "color",
            "label": "Color"
          }
        ]
      }
    ]
  }
{% endschema %}

<style>
  {% for block in section.blocks %}
    .{{ block.settings.colorStr | handleize }} {
      background-color: {{ block.settings.colorHex }};
    }
  {% endfor %}
</style>
