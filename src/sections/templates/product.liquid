{%- include 'product',
  _product: product,
  product_images_has_nav: section.settings.product_images_has_nav,
  product_images_filter_images: section.settings.product_images_filter_images,
  product_images_filter_group_options: section.settings.product_images_filter_group_options,
  product_images_alt_tag_delimiter: section.settings.product_images_alt_tag_delimiter,
  product_info_show_compare_at_price: section.settings.product_info_show_compare_at_price,
  product_info_show_option_name: section.settings.product_info_show_option_name,
  product_info_show_selected_value: section.settings.product_info_show_selected_value,
  product_info_add_to_cart_button_text: section.settings.product_info_add_to_cart_button_text,
  product_info_add_to_cart_button_classes: section.settings.product_info_add_to_cart_button_classes  -%}

{% schema %}
  {
    "name": "Product Template",
    "settings": [
      {
        "type": "header",
        "content": "Product Images"
      },
      {
        "id": "product_images_has_nav",
        "type": "checkbox",
        "label": "Product images has navigation?",
        "default": true
      },
      {
        "id": "product_images_filter_images",
        "type": "checkbox",
        "label": "Group  and filter images?",
        "default": true
      },
      {
        "id": "product_images_filter_group_options",
        "type": "text",
        "label": "Possible Options to group images by",
        "placeholder": "Optional",
        "info": "(navigation must be enabled)"
      },
      {
        "id": "product_images_alt_tag_delimiter",
        "type": "text",
        "label": "String to split alt attribute on for filter value",
        "placeholder": "Optional",
        "info": "alt tag will be split on this value and the value to the left of the delimiter will be the new alt tag and the value to the right will be the value that's used to filter by"
      },
      {
        "type": "header",
        "content": "Product Info"
      },
      {
        "id": "product_info_show_compare_at_price",
        "type": "checkbox",
        "label": "Show compare at price?",
        "default": true
      },
      {
        "id": "product_info_show_option_name",
        "type": "checkbox",
        "label": "Show option name?",
        "default": true
      },
      {
        "id": "product_info_show_selected_value",
        "type": "checkbox",
        "label": "Show selected option value?",
        "default": true
      },
      {
        "id": "product_info_add_to_cart_button_text",
        "type": "text",
        "label": "Add to cart button text",
        "default": "Add to Cart"
      },
      {
        "id": "product_info_add_to_cart_button_classes",
        "type": "text",
        "label": "Add to cart button classes",
        "default": "button--primary"
      }
    ],
    "blocks": []
  }
{% endschema %}
