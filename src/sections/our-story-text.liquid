{% assign remove_top_padding_on_desktop = true %}

{% include 'section-text', remove_top_padding_on_desktop: remove_top_padding_on_desktop %}

{% schema %}
  {
    "name": "Text Section",
    "settings": [
      {
        "id": "section_heading",
        "type": "text",
        "label": "Heading"
      },
      {
        "id": "section_text",
        "type": "textarea",
        "label": "Text"
      },
      {
        "type": "select",
        "id": "theme_select",
        "label": "Theme",
        "info": "pick a color theme for the section",
        "options": [
          {
            "value": "light",
            "label": "Light"
          },
          {
            "value": "dark",
            "label": "Dark"
          }
        ],
        "default": "light"
      }
    ]
  }
{% endschema %}