@mixin no-select() {
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

@mixin dummy($aspect: 100%, $background: cover) {
  overflow: hidden;
  @if($background){
    background-position: center;
    background-repeat: no-repeat;
    @include background-size($background);
  }

  &::before {
    display: block;
    width: 100%;
    padding-top: $aspect;
    content: "";
  }

  img { display: none; }
}

