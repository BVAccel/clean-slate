.home-slideshow-previous {
  left: 0;
}

.home-slideshow-next {
  right: 0;
}

.home-slideshow-pagination {
  @include transform(translateX(-50%));
  @include transition(color $slideshowSpeed $ease);
  position: absolute;
  bottom: 0;
  z-index: 5;
  text-align: center;
  left: 50%;
  line-height: 50px;
  font-size: 0;
  visibility: hidden !important;

  .slide-color-light & { color: $white; }
  .slide-color-dark & { color: $black; }

  .slides-ready & {
    visibility: visible;
  }

  .pagination-list-item {
    width: 12px;
    height: 12px;
    margin: 0 3px;
    display: inline-block;
    cursor: pointer;
  }

  .pagination-list-item span {
    @include border-radius(100%);
    width: 100%;
    height: 100%;
    display: block;
    background: transparent;
    border: 1px solid;

    .slide-color-light & { border-color: $white; }
    .slide-color-dark & { border-color: $black; }

    &:hover {
      border-width: 2px;
    }
  }

  .active span {
    background-color: $body-text-color;

    .slide-color-light & { background-color: $white; }
    .slide-color-dark & { background-color: $black; }
  }
}

.home-slide {
  @include transition(height $slideshowSpeed $ease);
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: $body-background-color;

  .full-window & {
    height: 100%;
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;

    @include breakpoint(sm) {
      background: none !important; // override inline styles
    }
  }
}

.transition-fade .home-slide {
  opacity: 0;

  &.active {
    z-index: 1;
    opacity: 1;
  }

  &.next.left,
  &.prev.right,
  &.active.left,
  &.active.right {
    @include transition(opacity $slideshowSpeed $ease);
  }

  &.next.left,
  &.prev.right {
    opacity: 1;
  }

  &.active.left {
    opacity: 0;
  }
  &.active.right {
    opacity: 0;
  }
}

.transition-slide .home-slide {
  z-index: 1;
  visibility: hidden;

  &.active {
    @include transform(translateX(0));
    z-index: 2;
    visibility: visible;
  }

  &.next {
    @include transform(translateX(100%));
  }

  &.prev {
    @include transform(translateX(-100%));
  }

  &.next.left,
  &.prev.right,
  &.active.left,
  &.active.right {
    @include transition(transform $slideshowSpeed $ease);
  }

  &.next.left,
  &.prev.right {
    @include transform(translateX(0));
    visibility: visible;
    z-index: 10;
  }

  &.active.left {
    @include transform(translateX(-100%));
  }
  &.active.right {
    @include transform(translateX(100%));
  }
}

