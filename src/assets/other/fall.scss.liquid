ShopPad App: Infinite Options
https://apps.shopify.com/custom-options
* * * * * * * * * * * * * * * * * * * * * * * * * * */
#infiniteoptions-container {
  
  &:empty {
    display: none !important;
  }
  > div {
    margin-bottom: 15px;
    display: inline-block;
    width: 100%;

    &:last-child {
      margin-bottom: 0;
    }

    > label {
      width: 100%;
      display: inline-block;
      margin: 0;
    }
    > span {
      width: 100%;
      display: inline-block;

      label {
        /* radio button labels */
        margin: 0;
        margin-bottom: 5px;
        width: 100%;
        display: inline-block;
        vertical-align: middle;
        cursor: pointer;
        position: relative;

        input[type=radio] {
          float: left;
          margin: 0;
          margin-right: 10px;
          display: inline-block;
          border: 1px solid $border-color;
          color: $body-text-color;
          font-family: $body-font;
          width: 20px;
          height: 20px;
          border-radius: 10px;
          -webkit-appearance: none;
          -moz-appearance: none;
          -ms-appearance: none;
          -o-appearance: none;
          appearance: none;
          outline: none;

          &:checked:after {
            content: '';
            position: absolute;
            width: 10px;
            height: 10px;
            background-color: $body-text-color;
            border-radius: 10px;
            top: 5px;
            left: 5px;
          }
        }
      }
    }
  }
  input[type=number] {
      border: 1px solid $border-color !important;
      border-radius: 5px !important;
      padding: 0 15px;
  }
  .spb-select {
    position: relative;

    &:after {
      position: absolute;
      top: 5px;
      right: 10px;
      height: 100%;
      line-height: inherit;
      color: $body-text-color;
      content: "\F107";
      @include launch-icons();
      font-size: 24px;
      pointer-events: none;
    }

    select {
      background-color: transparent;
      width: 100%;
      height: 50px;
      line-height: 50px;
      padding: 0 30px 0 15px;
      border: 1px solid $border-color;
      color: $body-text-color;
      font-family: $body-font;
      border-radius: 5px;
      -webkit-appearance: none;
    }
  }

  fieldset {
    border: 0;
    margin: 0;
    padding: 0;

    label {
      margin-bottom: 5px;
      width: 100%;
      display: inline-block;
      margin: 0;
    }
    input[type=checkbox] {
      float: left;
      margin: 0;
      margin-right: 10px;
      display: inline-block;
      border: 1px solid $border-color;
      color: $body-text-color;
      font-family: $body-font;
      width: 20px;
      height: 20px;
      border-radius: 4px;
      -webkit-appearance: none;
      -moz-appearance: none;
      -ms-appearance: none;
      -o-appearance: none;
      appearance: none;
      outline: none;

      &:checked:after {
        font-family: arial;
        content: '\2713';
        position: absolute;
        width: 20px;
        height: 20px;
        color: $body-text-color;
        top: 0;
        left: 0;
        text-align: center;
        line-height: 20px;
      }
    }
  }
}



