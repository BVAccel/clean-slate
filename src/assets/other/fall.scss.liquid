}

.post-comments-form-container {
  display: inline-block;
  width: 100%;
  max-width: 700px;
  margin: auto;
  vertical-align: top;

  @include breakpoint(sm) {
    padding: 0 $gutter/2 $gutter;
  }
}

.post-comments {
  display: inline-block;
  vertical-align: top;
  width: 100%;
  max-width: 700px;
  text-align: left;

  @include breakpoint(sm) {
    padding: 0 $gutter/2 $gutter;
  }
}

.post-comment {
  display: block;
  margin: 0 0 $gutter * 2;
  padding: 0 0 $gutter * 2;
  border-bottom: 1px solid $body-text-color;

  @include breakpoint(sm) {
    margin: 0 0 $gutter ;
    padding: 0 0 $gutter;

