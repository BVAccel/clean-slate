/* General
-------------------------------- */

body {
  //font-family: $body-font;
  font-family: 'Maven Pro', 'Open Sans', sans-serif;
  color: $body-text-color;
  font-weight: $body-weight;
  font-size: $body-font-size-1;
  line-height: 1.625;

  @if($use-font-smoothing) {
    @include font-smoothing();
  }
}

.icon {
  @include launch-icons();
}

/* Links */

a {
  color: $primary-color;
  text-decoration: none;
  cursor: pointer;
  @include transition(all 0.2s $ease);

  &:focus,
  &:hover {
    color: $primary-color;
  }

  &.disabled {
    color: $body-text-color;
    cursor: default;

    &:focus,
    &:hover {
      color: $body-text-color;
      cursor: default;
    }
  }
}

/* Headers */

h1, h2, h3, h4, h5, h6 {
  font-family: 'Maven Pro', 'Open Sans', sans-serif;
  font-weight: 100;
  font-size: inherit;
  margin: 0;
  padding: 0;
  -webkit-font-smoothing: initial;

  @if($use-font-smoothing) {
    @include font-smoothing();
  }
}

/* Basic text */

img {
  max-width: 100%;
  display: inline-block;
  vertical-align: top;
}

ul, ol, dl {
  padding: 0;
  margin: 23px 0;
}

ul {
  list-style: outside none;
}

ol {
  list-style: outside decimal;
}

li {
  margin: 12px 0;
}

hr {
  height: 2px;
  background: $border-color;
  border: 0;
}

p {
  margin: 0;
  padding: $gutter/2 0;
}

strong {
  font-weight: 700;

  @if($use-font-smoothing) {
    @include font-smoothing();
  }
}

.bold {
  font-weight: 700;
}

/* Tables */

table {
  color: $body-text-color;
  border: 1px solid $border-color;
  border-top: none;
  font-size: 14px;
  border-collapse: separate;
  margin: $gutter 0;
  background: transparent;

  &.clean {
    border: 0;
    border-radius: 0;
    font-size: $body-font-size-1;
  }

  .column-title {
    display: none;
  }
}

th {
  background: $border-color;
  color: $heading-text-color;
  font-weight: $heading-weight;
  text-align: center;

  .clean & {
    background: none;
  }
}

tr td, tr th {
  border-top: 1px solid $border-color;
  padding: $gutter/(3/2);
}

tr td {
  border-left: 1px solid $border-color;

