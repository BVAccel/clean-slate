{%- include 'additional-classes' -%}

{%- comment -%}
  Add class .header-mini to pages that have white backgrounds above the fold
  to prevent white text on white bg
{%- endcomment -%}
{%- capture templateHandle -%}{{ template | handleize }}{%- endcapture -%}

{%- if
  templateHandle == 'page-contact' or
  templateHandle == 'page' or
  templateHandle == 'blog' or
  templateHandle == 'collection-super' or
  templateHandle == 'cart'
%}
  {%- assign headerActiveStyleClass = 'header-mini' -%}
{%- endif -%}

<body class="{{ bodyClasses }} {%- if template == 'page.technology' -%}template-page-technology{%- endif -%} has-promo {{ headerActiveStyleClass }}" id="top">
  {%- capture the_snippet_content -%}
  {%- include 'socialshopwave-helper' -%}
  {%- endcapture -%}

  {%- unless the_snippet_content contains 'Liquid error' -%}
  {{ the_snippet_content }}
  {%- endunless -%}


  <div class="top-header-content-container js-header-container" js-header-container>
    {%- include 'promotion-bar' -%}

    {%- include 'header-message' -%}

    {%- include 'header' -%}
  </div>

  {%- section 'inline-cart' -%}

  <main class="main-content">
    {{ content_for_layout }}
  </main>

  <script>
  jQuery(function() {
    jQuery('.swatch :radio').change(function() {
      var optionIndex = jQuery(this).closest('.swatch').attr('data-option-index');
      var optionValue = jQuery(this).val();
      jQuery(this)
      .closest('form')
      .find('.single-option-selector')
      .eq(optionIndex)
      .val(optionValue)
      .trigger('change');
    });
  });
  </script>

  {%- include 'footer' -%}
  {%- include 'scripts-styles-footer' -%}

  {%- if product -%}
    <script>
      var boosterParams = boosterParams || {};
      boosterParams.customer = {};
      boosterParams.product = {{ product | json }};

      {%- if  customer -%}
        boosterParams.customer.email = "{{ customer.email }}";
      {%- endif -%}
    </script>
  {%- endif -%}

  {%- include 'criteo-tracking' -%}

  {%- include 'mw_PO_objects' -%}

  {%- include 'spurit_sct-theme-snippet' -%}

  {%- include 'flow-checkout-mods' -%}
  {%- include 'flow-GA-CheckoutFunnel' -%}

  {%- include 'shop-api' -%}
  {%- include 'script-tags', layout: 'theme' -%}
  
</body>
