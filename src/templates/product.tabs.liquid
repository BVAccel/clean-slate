                {{ productTabContent[1] | strip }}
              </div>
              <div class="product-tabs-body-item rte" rel="tab3">
                {% case product.handle %}
                  {% when 'orion-series-gloves-unisex' %}
                    <img src={{ 'unisex-glove-sizing.jpg' | asset_img_url: '600x', scale: 3 }}/>
                  {% when 'orion-series-jacket' %}
                     <img src={{ 'mens-jacket-sizing.jpg' | asset_img_url: '1000x', scale: 3 }}/>
                  {% when 'orion-series-jacket-womens' %}
                     <img src={{ 'womens-jacket-sizing.jpg' | asset_img_url: '1000x', scale: 3 }}/>
                  {% when 'orion-series-snow-pants-men' %}
                     <img src={{ 'mens-snow-pants-sizing.jpg' | asset_img_url: '1000x', scale: 3 }}/>
                  {% when 'orion-series-snow-pants-women' %}
                     <img src={{ 'womens-snow-pants-sizing.jpg' | asset_img_url: '1000x', scale: 3 }}/>
                  {% when 'orion-series-beanie-men-and-women' %}

                  {% else %}
              	{% endcase %}
                {{ productTabContent[2] }}
              </div>
              <div class="product-tabs-body-item rte" rel="tab4">
                {{ productTabContent[3] | strip }}
              </div>
            </div>
          </div>
          <!-- Accordion -->
          <div class="panel-group product-tabs-accordion show-mobile" id="product-accordion" role="tablist" aria-multiselectable="true">
